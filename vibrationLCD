#include <LiquidCrystal.h>

int vib_pin=7;
const int rs = 12, en = 11, d4 = 5, d5 = 4, d6 = 3, d7 = 2;
LiquidCrystal lcd(rs, en, d4, d5, d6, d7);

void setup() {
  pinMode(vib_pin,INPUT);
  lcd.begin(16, 2);
  Serial.begin(9600);
}

void loop() {
  int score;
  int val;
  val=digitalRead(vib_pin);
  if(val==1)
  {
    score+=10;
    delay(1000);
  }
  lcd.setCursor(0,1);
  lcd.print(score);
  Serial.println(score);
  delay(100);

}
